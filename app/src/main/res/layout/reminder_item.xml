<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp">
    <LinearLayout
        android:layout_width="69dp"
        android:layout_height="80dp"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/teal_200"
            android:src="@drawable/nt">

        </ImageView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="99dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title_itemtv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:hint="Title"
            android:textColor="#F5000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/Descri_itemtv"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:hint="Comment"
            android:textColor="#F5000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/date_itemtv"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="1dp"
            android:hint="Date"
            android:textColor="#F5000000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/Time_itemtv"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="-24.25dp"
            android:hint="Time"
            android:paddingStart="0dp"
            android:paddingLeft="7dp"
            android:textColor="#F5000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="-24.25dp"
            android:text="Repeat"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/repeat_info"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="-24.25dp"
            android:text=""
            android:textSize="16sp" />


    </LinearLayout>

    <!--      <ImageView-->
    <!--          android:layout_width="41dp"-->
    <!--          android:layout_height="37dp"-->
    <!--          android:src="@drawable/nt" />-->


</LinearLayout>